{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "NexusAI",
  "version": "1.4.0",
  "identifier": "com.nexusai.app",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "NexusAI - 智能大模型工作台",
        "width": 1400,
        "height": 900,
        "minWidth": 1000,
        "minHeight": 700,
        "center": true,
        "resizable": true,
        "fullscreen": false,
        "decorations": true,
        "transparent": false,
        "alwaysOnTop": false,
        "visible": true,
        "theme": "Dark"
      }
    ],
    "security": {
      "csp": {
        "default-src": "'self' 'unsafe-inline' 'unsafe-eval' blob: data:",
        "connect-src": "'self' http://localhost:* https://api.openai.com https://api.anthropic.com https://generativelanguage.googleapis.com https://*.aliyun.com https://*.z.ai https://api.deepseek.com https://api.minimax.chat ws://localhost:*",
        "img-src": "'self' blob: data: https:",
        "style-src": "'self' 'unsafe-inline'",
        "script-src": "'self' 'unsafe-inline' 'unsafe-eval'"
      },
      "capabilities": [
        {
          "identifier": "default",
          "description": "Default capabilities for the app",
          "windows": ["main"],
          "permissions": [
            "core:default",
            "fs:allow-app-read",
            "fs:allow-app-write",
            "fs:allow-app-meta",
            "dialog:allow-open",
            "dialog:allow-save",
            "dialog:allow-ask",
            "dialog:allow-message",
            "http:default",
            "notification:default",
            "shell:allow-open",
            "clipboard-manager:allow-write-text",
            "clipboard-manager:allow-read-text"
          ]
        }
      ]
    }
  },
  "bundle": {
    "active": true,
    "targets": ["msi", "nsis", "dmg", "app", "deb", "rpm", "appimage"],
    "category": "Productivity",
    "copyright": "Copyright © 2026 NexusAI",
    "publisher": "NexusAI Team",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "frameworks": [],
      "minimumSystemVersion": "10.13",
      "license": "",
      "signingIdentity": null,
      "entitlements": null,
      "exceptionDomain": "",
      "providerShortName": null,
      "hardenedRuntime": true
    },
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": "",
      "tsp": false,
      "webviewInstallMode": {
        "type": "downloadBootstrapper"
      }
    },
    "linux": {
      "appimage": {
        "bundleMediaFramework": false
      },
      "deb": {
        "depends": ["libwebkit2gtk-4.0-37", "libgtk-3-0"]
      }
    }
  },
  "plugins": {}
}
